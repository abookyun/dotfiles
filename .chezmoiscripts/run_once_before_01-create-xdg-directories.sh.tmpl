#!/bin/bash
# Create XDG Base Directory structure
# This runs once before applying dotfiles to ensure directories exist

set -e

echo "Creating XDG Base Directory structure..."

# XDG Base Directories
mkdir -p "${XDG_CONFIG_HOME:-$HOME/.config}"
mkdir -p "${XDG_DATA_HOME:-$HOME/.local/share}"
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}"
mkdir -p "${XDG_CACHE_HOME:-$HOME/.local/cache}"

# Application-specific directories
# Data directories
mkdir -p "${XDG_DATA_HOME:-$HOME/.local/share}/zsh"
mkdir -p "${XDG_DATA_HOME:-$HOME/.local/share}/vim"
mkdir -p "${XDG_DATA_HOME:-$HOME/.local/share}/tmux/plugins"
mkdir -p "${XDG_DATA_HOME:-$HOME/.local/share}/asdf"

# State directories
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}/zsh"
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}/vim"
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}/tmux"
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}/node"
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}/ruby"
mkdir -p "${XDG_STATE_HOME:-$HOME/.local/state}/python"

# Cache directories
mkdir -p "${XDG_CACHE_HOME:-$HOME/.local/cache}/wget"

echo "âœ“ XDG directories created"
